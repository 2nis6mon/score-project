server {
    listen       80;
    server_name  localhost;

    location /api {
        proxy_pass ${SCORE_REST_API_URL}/api;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    location / {
        root   /usr/share/nginx/score;
        index  index.html index.htm;
    }
}